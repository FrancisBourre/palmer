package net.pixlib.utils.reflect{	/**	 * Base class information.	 * 	 * <p>Don't use it as <strong>ElementInfo</strong> is an abstract class.</p>	 * 	 * @see AccessorInfo	 * @see MethodInfo	 * @see ParameterInfo	 * @see PropertyInfo	 * 	 * @author Romain Ecarnot	 */	public class ElementInfo	{		//--------------------------------------------------------------------		// Private Properties		//--------------------------------------------------------------------				protected var _desc : XML;		protected var _name : String;		protected var _type : String;		protected var _static : Boolean;		protected var _declaredBy : String;						//--------------------------------------------------------------------		// Public properties		//--------------------------------------------------------------------				/** Elements description. */		public function get description() : XML { return _desc; }				/** Elements name. */		public function get name() : String { return _name; }				/** Elements type. */		public function get type() : String { return _type; }				/** <code>true</code> if element is <code>static</code>. */		public function get staticFlag() : Boolean { return _static; }				/** Returns element declaration scope. */		public function get declaredBy( ) : String { return _declaredBy; }						//--------------------------------------------------------------------		// Public API		//--------------------------------------------------------------------				/**		 * Returns string representation.		 */		public function toString( ) : String		{			return "Element " + name + " : " + type + 				" [ " + staticFlag + " ]"; 		}								//--------------------------------------------------------------------		// Private implementations		//--------------------------------------------------------------------				/**		 * @private		 * Private constructor.		 * 		 * @param	eDesc	XML Description		 * @param	eName	Element name		 * @param	eType	Element type		 * @param	eStatic	Is static		 */		public function ElementInfo( eDesc : XML, eName : String, eType : String, 			eStatic : Boolean = false, eDeclare : String = null )		{			_desc = eDesc;			_name = eName;			_type = eType;			_static = eStatic;			_declaredBy = eDeclare;		}	}}